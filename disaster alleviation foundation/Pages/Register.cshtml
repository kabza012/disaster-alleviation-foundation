@page
@model disaster_alleviation_foundation.Pages.register
@{
    ViewData["Title"] = "Home page";
}
<div class="signup-conatainer">
    <h1>Register</h1>

    <form method="post">
        <div class="form-group">
            <label for="Name">Username:</label>
            <input type="text" class="form-control" id="Name" name="Username" required />
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input type="password" class="form-control" id="Password" name="Password">
            </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="Email" class="form-control" id="Email" name="Email">
        </div>

        <button asp-page="/Index" class="btn btn-primary">Register</button>

    </form>
</div>
<div class="Para-box">
    <p>In case you haven't created an account please <a href="/Login"> Register here </a></p>
</div>