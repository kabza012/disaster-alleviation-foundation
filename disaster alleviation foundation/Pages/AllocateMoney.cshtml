@page
@model disaster_alleviation_foundation.Pages.AllocateMoneyModel


@{
    ViewData["Title"] = "Allocate Money";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="Disasters.DisasterId">DisasterId:</label>
        <input type="number" class="form-control" id="number" name="DisasterId" required />
    </div>
    <div class="form-group">
        <label for="amount">Amount:</label>
        <input type="text" id="amount" name="amount" class="form-control" />
    </div>
   
    <!-- Add other form fields as needed -->

    <button type="submit" class="btn btn-primary">Allocate Money</button>
</form>